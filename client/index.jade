doctype html

html(lang="en")
	head
		base(href="/")
		title #{title}
		link(rel="stylesheet" href="lib/bootstrap/dist/css/bootstrap.min.css")
		link(rel="stylesheet" href="lib/font-awesome/css/font-awesome.min.css")
		script(src="lib/angular/angular.min.js")
		script(src="app.js")
		script(src="appRoute.js")
		script(src="js/MainCtrl.js")
		script(src="js/FrenCtrl.js")
		script(src="lib/angular-route/angular-route.min.js")
		script(src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js")
		script(src="https://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/js/bootstrap.min.js")
	body(ng-app="sampleApp")
		div.container
			nav.navbar.navbar-inverse(role="navigation")
				div.container-fluid
					div.navbar-header
						button.navbar-toggle.collapsed(type="button", data-toggle="collapse", data-target="#bs-example-navbar-collapse-1")
							span.sr-only Toggle navigation
							span.icon-bar
							span.icon-bar
							span.icon-bar
						a.navbar-brand(href="/") #{myuser.facebook.me.first_name}
					
					div.collapse.navbar-collapse(id="bs-example-navbar-collapse-1")
						ul.nav.navbar-nav
							li
								a(href="/wishlist") Wishlist
							li
								a(href="/inventory") Inventory
							li
								a(href="/search") Search
							li
								a(href="/exit") Logout
			script.
				var resultObj = !{JSON.stringify(myuser)}
			div(style="width:100%;" ng-controller = "MainController")
				div(style="float:left; width:20%;")
					ul
						li(ng-repeat = "friend in resultObj.facebook.friends.data")
							a(href="/friends/:{{friend.id}}"){{friend.name}}
				div(style="float:left; width:70%; margin-left:10px;")
					div(ng-view="")
